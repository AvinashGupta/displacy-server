//- Settings / Meta

-meta_sitename = "displaCy"
-meta_title = "displaCy | Dependency Parse Tree Visualization with CSS and JavaScript"
-meta_description = "displaCy lets you peek inside spaCy's syntactic parser, as it reads a sentence word-by-word. By repeatedly choosing from a small set of actions, it links the words together according to their syntactic structure."
-meta_image = "https://api.spacy.io/displacy/img/preview.png"
-meta_twitter = "@spacy_io"

mixin modal(id, title, button)
	.modal(id=id)
		.dialog
			h2=title
			block
			button.close=button


//- --------------------

doctype html

html
	head
		title=title
		link(rel="stylesheet" href="css/style.css")

		meta(charset="utf-8")
		meta(name="viewport" content="width=device-width, initial-scale=1.0")
		meta(property="og:title" content=meta_title)
		meta(property="og:type" content="website")
		meta(property="og:image" content=meta_image)
		meta(property="og:site_name" content=meta_sitename)
		meta(property="og:description" content=meta_description)
		meta(name="twitter:card" content="summary_large_image")
		meta(name="twitter:site" content=meta_twitter)
		meta(name="twitter:title" content=meta_title)
		meta(name="twitter:description" content=meta_description)
		meta(name="twitter:image" content=meta_image)

	body.theme-dark


		//- displaCy Container

		#displacy


		//- Header

		header

			button#nav-icon.menu-button
				span Toggle navigation

			.logo=meta_title

			.input-box
				input#input(type="text" placeholder="Type a sentence...")

				.input-buttons
					button#button-parse Parse
					button#button-manual Annotate

			ul.toolbar
				li.dot-menu
				li#button-note.note-pen(data-tooltip="Add a note") Add a note
				li#button-help.help(data-tooltip="Info") Info
				//-li#button-share.share(data-tooltip="Share parse") Share parse
				li#loading.spinner


		//- Side navigation

		nav#sidenav.sidenav
			h3 Settings

			.switch-container
				span Light theme

				.switch
					input#theme_light.switcher(type="checkbox")
					label(for="theme_light")

			h3 About displaCy

